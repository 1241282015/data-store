{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015"]
  },
  "exclude": [
    "tmp",
    "dist",
    "node_modules"
  ]
}
